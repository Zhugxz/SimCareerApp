<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.fragment.ClassificheFragment" android:orientation="vertical"
              android:padding="20dp">


    <TextView
            android:text="LEON SUPERCOPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rank_txt_title" android:textSize="24sp"
            android:textStyle="bold"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    <TextView
            android:text="Classifica piloti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="18sp" android:textStyle="bold|italic"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingLeft="20dp" android:paddingRight="20dp"
                android:id="@+id/rank_table_piloti"/>
    </HorizontalScrollView>

    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    <TextView
            android:text="Classifica team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="18sp" android:textStyle="bold|italic"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingLeft="20dp" android:paddingRight="20dp"
                android:id="@+id/rank_table_team"/>
    </HorizontalScrollView>

</LinearLayout>